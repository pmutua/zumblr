<div class="clearfix">
	<div class="content">
		<p class="comment_name"><strong><%= comment.name %></<strong></strong>></p>
		<p class="comment_body"><%= comment.body %></p>
		<p class="comment_title"><em><%= time_ago_in_words(comment.created_at)%> 	Ago</p>  
	</div>
	<% if user_signed_in? %>
		<p><%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button", data: { confirm: 'Are You Sure?' } %></p>
	<% end %>
	
</div>